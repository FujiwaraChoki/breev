{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/.breev" },
        { "path": "$HOME/.breev/**" },
        { "path": "$HOME/.claude/commands" },
        { "path": "$HOME/.claude/commands/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$HOME/.breev" },
        { "path": "$HOME/.breev/**" },
        { "path": "$HOME/.claude" },
        { "path": "$HOME/.claude/commands" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/.breev/**" },
        { "path": "$HOME/.claude/commands/breev.md" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/.breev/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/.breev" },
        { "path": "$HOME/.breev/**" }
      ]
    }
  ]
}
